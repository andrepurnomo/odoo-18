<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_koperasi_transaksi_simpanan_form" model="ir.ui.view">
        <field name="name">koperasi.transaksi.simpanan.form</field>
        <field name="model">koperasi.transaksi.simpanan</field>
        <field name="arch" type="xml">
            <form string="Transaksi Simpanan">
                <header>
                    <button name="action_confirm" string="Konfirmasi" type="object"
                        class="oe_highlight" invisible="state != 'draft'" />
                    <button name="action_cancel" string="Batalkan" type="object"
                        invisible="state != 'confirmed'"
                        confirm="Apakah Anda yakin ingin membatalkan transaksi ini?" />
                    <button name="action_draft" string="Set ke Draft" type="object"
                        invisible="state != 'cancelled'" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,confirmed,cancelled" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="anggota_id" invisible="state != 'draft'" />
                            <field name="jenis_simpanan_id" invisible="state != 'draft'" />
                            <field name="tipe_transaksi" invisible="state != 'draft'" />
                            <field name="jumlah" invisible="state != 'draft'" widget="monetary" />
                        </group>
                        <group>
                            <field name="tanggal_transaksi" invisible="state != 'draft'" />
                            <field name="saldo_sebelum" readonly="1" widget="monetary" />
                            <field name="saldo_sesudah" readonly="1" widget="monetary" />
                            <field name="currency_id" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Keterangan">
                            <field name="keterangan" invisible="state != 'draft'" />
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="view_koperasi_transaksi_simpanan_tree" model="ir.ui.view">
        <field name="name">koperasi.transaksi.simpanan.tree</field>
        <field name="model">koperasi.transaksi.simpanan</field>
        <field name="arch" type="xml">
            <list string="Transaksi Simpanan" decoration-danger="state == 'cancelled'"
                decoration-success="state == 'confirmed'" decoration-info="state == 'draft'">
                <field name="name" />
                <field name="anggota_id" />
                <field name="jenis_simpanan_id" />
                <field name="tipe_transaksi" />
                <field name="jumlah" sum="Total" widget="monetary" />
                <field name="tanggal_transaksi" />
                <field name="state" />
                <field name="currency_id" column_invisible="1" />
            </list>
        </field>
    </record>

    <record id="view_koperasi_transaksi_simpanan_search" model="ir.ui.view">
        <field name="name">koperasi.transaksi.simpanan.search</field>
        <field name="model">koperasi.transaksi.simpanan</field>
        <field name="arch" type="xml">
            <search string="Cari Transaksi">
                <field name="name" />
                <field name="anggota_id" />
                <field name="jenis_simpanan_id" />
                <separator />
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]" />
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]" />
                <separator />
                <filter string="Setor" name="setor" domain="[('tipe_transaksi', '=', 'setor')]" />
                <filter string="Tarik" name="tarik" domain="[('tipe_transaksi', '=', 'tarik')]" />
                <filter string="Potongan Wajib" name="potongan_wajib"
                    domain="[('tipe_transaksi', '=', 'potongan_wajib')]" />
                <filter string="Pendaftaran Pokok" name="pendaftaran_pokok"
                    domain="[('tipe_transaksi', '=', 'pendaftaran_pokok')]" />
                <filter string="Pengembalian Keluar" name="pengembalian_keluar"
                    domain="[('tipe_transaksi', '=', 'pengembalian_keluar')]" />
                <group expand="0" string="Group By">
                    <filter string="Anggota" name="group_by_anggota" domain="[]"
                        context="{'group_by':'anggota_id'}" />
                    <filter string="Jenis Simpanan" name="group_by_jenis" domain="[]"
                        context="{'group_by':'jenis_simpanan_id'}" />
                    <filter string="Tipe Transaksi" name="group_by_tipe" domain="[]"
                        context="{'group_by':'tipe_transaksi'}" />
                    <filter string="Status" name="group_by_state" domain="[]"
                        context="{'group_by':'state'}" />
                    <filter string="Tanggal" name="group_by_tanggal" domain="[]"
                        context="{'group_by':'tanggal_transaksi'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_koperasi_transaksi_simpanan" model="ir.actions.act_window">
        <field name="name">Transaksi Simpanan</field>
        <field name="res_model">koperasi.transaksi.simpanan</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_koperasi_transaksi_simpanan_search" />
        <field name="context">{'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat transaksi simpanan pertama
            </p>
        </field>
    </record>
</odoo>